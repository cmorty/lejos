 <!--
  ==================================================
  Buildfile for building classes.jar for NXT
  ==================================================
-->
<project name="leJOS NXT Java classes" default="build" basedir="."> 	<!-- creates the classes jar -->
  	<target name="build" description="generate classes jar">
    	<mkdir dir="build/classes"/>
    	<javac srcdir="." destdir="build/classes" fork="yes" optimize="on" debug="on" source="1.5" target="1.5"/>
    	<jar destfile="lib/classes.jar" basedir="build/classes" update="false"/>
  	</target>
	
	<!-- deletes class files -->
		<target name="clean" description="clean up all generated files">
			<delete>
						<fileset dir="."> 
							<include name="**/*.class"/>
					    </fileset>
			</delete>
		</target>
</project>
